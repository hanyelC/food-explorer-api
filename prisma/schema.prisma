generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  admin    Boolean @default(false)
  password String

  @@map("users")
}

model Category {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String

  @@map("categories")
}
